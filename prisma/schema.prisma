// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Settings {
  key   String @id
  value String
}

model Episode {
  show        Show     @relation(fields: [showId], references: [id])
  showId      String
  season      Int
  number      Int
  title       String
  airDate     DateTime
  messageSent Boolean  @default(false)

  @@id([showId, season, number])
}

model Show {
  id              String            @id @default(cuid())
  name            String
  imdbId          String            @unique
  tvdbId          Int               @unique
  Episode         Episode[]
  ShowDestination ShowDestination[]
}

model ShowDestination {
  show      Show   @relation(fields: [showId], references: [id])
  showId    String
  channelId String

  @@id([showId, channelId])
}
