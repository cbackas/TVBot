// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Settings {
  key   String @id
  value String
}

model Episode {
  id     String @id @default(cuid())
  name   String
  showId String
  show   Show   @relation(fields: [showId], references: [id])
}

model Show {
  id       String     @id @default(cuid())
  name     String
  imdbId   String     @unique
  tmdbId   Int        @unique
  tvdbId   Int        @unique
  Episode  Episode[]
  ShowPost ShowPost[]
}

model ForumPost {
  id       String     @id @default(cuid())
  postId   String
  forumId  String
  ShowPost ShowPost[]
}

model ShowPost {
  show        Show      @relation(fields: [showId], references: [id])
  showId      String
  forumPost   ForumPost @relation(fields: [forumPostId], references: [id])
  forumPostId String

  @@id([showId, forumPostId])
}
